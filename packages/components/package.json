{
  "name": "@grtsinry43/vue-components",
  "version": "0.1.0",
  "keywords": [
    "vue"
  ],
  "author": "grtsinry43",
  "license": "MIT",
  "private": false,
  "type": "module",
  "main": "./dist/my-vue-component-library.umd.js",
  "module": "./dist/my-vue-component-library.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/my-vue-component-library.es.js",
      "require": "./dist/my-vue-component-library.umd.js",
      "types": "./dist/index.d.ts"
    },
    "./style.css": "./dist/style.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build && vue-tsc --declaration --emitDeclarationOnly",
    "lint": "eslint . --ext .vue,.js,.ts,.jsx,.tsx --fix",
    "format": "prettier --write src/",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "coverage": "vitest run --coverage",
    "test:watch": "vitest watch"
  },
  "peerDependencies": {
    "vue": "^3.2.0"
  },
  "packageManager": "pnpm@10.11.0",
  "dependencies": {
    "vue": "^3.5.14"
  },
  "devDependencies": {
    "@types/node": "^22.15.21",
    "@vitejs/plugin-vue": "^5.2.4",
    "@vitest/ui": "3.1.4",
    "@vue/test-utils": "^2.4.6",
    "happy-dom": "^17.4.7",
    "sass": "^1.89.0",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.1.4"
  }
}
